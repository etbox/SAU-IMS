<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fekpal.dao.user.SauDao">
    <cache/>

    <sql id="allInfo">
        select *
        from sau_info si
        inner join user u on si.user_id = u.user_id
    </sql>

    <sql id="info">
        select * from sau_info
    </sql>

    <select id="get" parameterType="int" resultMap="sauResult">
        <include refid="allInfo"/>
        where sau_id = #{id}
    </select>

    <select id="getByUserId" parameterType="User" resultMap="sauResult">
        <include refid="allInfo"/>
        where user_id = #{id}
    </select>

    <select id="getInfo" parameterType="int" resultMap="sauResult">
        <include refid="info"/>
        where sau_id = #{id}
    </select>

    <select id="getInfoByUserId" parameterType="int" resultMap="sauResult">
        <include refid="info"/>
        where user_id = #{id}
    </select>

    <insert id="add" parameterType="Sau" useGeneratedKeys="true" keyProperty="sauId" keyColumn="sau_id">
        insert into sau_info (
        sau_id, user_id,
        sau_name, found_time,
        description, admin_name,
        sau_logo, members,
        sau_state)
        values (
        #{sauId}, #{userId}
        #{sauName}, #{foundTime}
        #{description}, #{adminName}
        #{logo}, #{members}
        #{sauState})
    </insert>

    <update id="update" parameterType="Sau">
        update sau_info set
        sau_name = #{sauName},
        admin_name = #{adminName},
        found_time=#{foundTime},
        sau_logo = #{logo},
        description = #{description},
        members = #{members}
        sau_state = #{sau_state}
        where sau_id = #{sauId}
    </update>

    <update id="delete" parameterType="int">
        update sau_info set
        sau_state = 0
        where sau_id = #{id}
    </update>

    <select id="loadAll" resultMap="sauResult">
        <include refid="info"/>
        limit #{arg0}, #{arg1}
    </select>

    <resultMap id="sauResult" type="Sau">
        <id property="sauId" column="sau_id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginTime" column="login_time"/>
        <result property="userKey" column="user_key"/>
        <result property="registerIp" column="register_ip"/>
        <result property="registerTime" column="register_time"/>
        <result property="userState" column="user_state"/>
        <result property="sauName" column="sau_name"/>
        <result property="foundTime" column="found_time"/>
        <result property="adminName" column="admin_name"/>
        <result property="logo" column="sau_logo"/>
        <result property="description" column="description"/>
        <result property="members" column="members"/>
        <result property="sauState" column="sau_state"/>
    </resultMap>
</mapper>