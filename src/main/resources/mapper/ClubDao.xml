<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fekpal.dao.user.ClubDao">
    <cache/>

    <sql id="allInfo">
        select * from club_info ci
        inner join user u on ci.user_id = u.user_id
    </sql>

    <sql id="info">
        select * from club_info
    </sql>

    <select id="get" parameterType="int" resultMap="clubResult">
        <include refid="allInfo"/>
        where club_id = #{id}
    </select>

    <select id="getByUserId" parameterType="int" resultMap="clubResult">
        <include refid="allInfo"/>
        where user_id = #{id}
    </select>

    <select id="getInfo" parameterType="int" resultMap="clubResult">
        <include refid="info"/>
        where club_id = {id}
    </select>

    <select id="getInfoByUserId" parameterType="int" resultMap="clubResult">
        <include refid="info"/>
        where user_id = #{id}
    </select>

    <select id="getByClubName" parameterType="String" resultMap="clubResult">
        <include refid="info"/>
        where club_name = #{clubName}
    </select>

    <select id="findByClubName" resultMap="clubResult">
        <include refid="info"/>
        where club_name like concat('%',#{arg0},'%') limit #{arg1},#{arg2}
    </select>

    <sql id="exit">
        select count(*) from club_info
    </sql>

    <select id="isExit" parameterType="String" resultType="boolean">
        <include refid="exit"/>
        where club_name = #{clubName}
    </select>

    <insert id="add" parameterType="Club" useGeneratedKeys="true" keyProperty="clubId" keyColumn="club_id">
        insert into club_info (
        user_id, club_name,
        found_time, decription,
        admin_name, club_type,
        club_logo, club_view,
        like_number, members
        club_state)
        values (
        #{userId}, #{clubName},
        #{foundTime}, #{description},
        #{adminName}, #{clubType}
        #{logo}, #{clubView}
        #{likeNumber}, #{members}
        #{clubState})
    </insert>

    <update id="update" parameterType="Club">
        update club_info set
        club_name = #{clubName},
        club_logo = #{logo},
        club_type = #{clubType},
        club_view = #{clubView},
        admin_name = #{adminName},
        description = #{description},
        members = #{members}
        club_state = #{clubState}
        where club_id = #{clubId}
    </update>

    <update id="delete" parameterType="int">
        update club_info set
        club_state = 0
        where club_id = #{id}
    </update>

    <update id="updateLikeClick" parameterType="int">
        update club_info set
        like_number = like_number + 1
        where club_id = #{id}
    </update>

    <select id="loadAll" resultMap="clubResult" useCache="false">
        <include refid="info"/>
        limit #{arg0}, #{arg1}
    </select>

    <resultMap id="clubResult" type="Club">
        <id property="clubId" column="club_id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginTime" column="login_time"/>
        <result property="userKey" column="user_key"/>
        <result property="registerIp" column="register_ip"/>
        <result property="registerTime" column="register_time"/>
        <result property="userState" column="user_state"/>
        <result property="clubName" column="club_name"/>
        <result property="foundTime" column="found_time"/>
        <result property="adminName" column="admin_name"/>
        <result property="clubType" column="club_type"/>
        <result property="logo" column="club_logo"/>
        <result property="clubView" column="club_view"/>
        <result property="likeNumber" column="like_number"/>
        <result property="members" column="members"/>
        <result property="clubState" column="club_state"/>
    </resultMap>
</mapper>