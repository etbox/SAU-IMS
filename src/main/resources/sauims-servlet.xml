<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <context:component-scan base-package="com.fekpal.web"/>
    <mvc:annotation-driven/>

    <!--文件上传，下载-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="1048576000"/>
        <property name="maxInMemorySize" value="4096"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <!---  json数据返回的配置-->
    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"/>
    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerAdapter">
        <property name="messageConverters">
            <list>
                <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>
            </list>
        </property>
    </bean>

    <!--邮箱发送器,暂时废除-->
    <bean id="authenticator" class="org.apache.commons.mail.DefaultAuthenticator"
          c:userName="${mail.username}"
          c:password="${mail.password}"/>

    <bean id="simpleEmail" class="org.apache.commons.mail.SimpleEmail" scope="request"
          p:hostName="${mail.hostname}"
          p:from="${mail.username}"
          p:authenticator-ref="authenticator"
          p:smtpPort="${mail.smtp.port}"
          p:socketConnectionTimeout="${mail.smtp.connectiontimeout}"
          p:socketTimeout="${mail.smtp.timeout}"
          p:SSLOnConnect="${mail.smtp.ssl}">
        <aop:scoped-proxy/>
    </bean>

    <bean id="emailSender" class="com.fekpal.common.utils.msg.email.EmailSender"
          p:mailSender-ref="mailSender"
          p:defaultFrom="${mail.username}"/>

    <!--新邮件发送器-->
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${mail.hostname}"/>
        <property name="port" value="${mail.smtp.port}"/>
        <property name="username" value="${mail.username}"/>
        <property name="password" value="${mail.password}"/>
        <property name="defaultEncoding" value="${mail.charset}"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">${mail.smtp.ssl}</prop>
                <prop key="mail.smtp.timeout">${mail.smtp.timeout}</prop>
                <prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
            </props>
        </property>
    </bean>


    <!-- 拦截器 -->
    <mvc:interceptors>
        <!-- 多个拦截器，顺序执行 -->
        <!--登录拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/sau/**"/>
            <mvc:mapping path="/club/**"/>
            <mvc:mapping path="/member/**"/>
            <mvc:mapping path="/msg/**"/>
            <bean class="com.fekpal.web.interceptor.LoginInterceptor"/>
        </mvc:interceptor>

        <!--资源路径访问拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/sau/**"/>
            <mvc:mapping path="/club/**"/>
            <mvc:mapping path="/member/**"/>
            <mvc:mapping path="/msg/**"/>
            <bean class="com.fekpal.web.interceptor.URIInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!--前端资源路径映射-->
    <!--
    <mvc:resources mapping="/images/**" location="/images/"/>
    <mvc:resources mapping="/javascripts/**" location="/javascripts/"/>
    <mvc:resources mapping="/stylesheets/**" location="/stylesheets/"/>
    <mvc:resources mapping="/component/**" location="/component/"/>
    <mvc:resources mapping="/member_admin/**" location="/member_admin/"/>
    <mvc:resources mapping="/club_admin/**" location="/club_admin/"/>
    <mvc:resources mapping="/sau_admin/**" location="/sau_admin/"/>
    -->

    <!--上传资源路径映射-->
    <!--图片类-->
    <mvc:resources mapping="/resource/logo/*" location="/WEB-INF/resources/logo/"/>
    <mvc:resources mapping="/resource/view/sau/*" location="/WEB-INF/resources/sau_view/"/>
    <mvc:resources mapping="/resource/view/club/*" location="/WEB-INF/resources/club_view/"/>

    <!--其他-->
</beans>