<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <context:component-scan base-package="com.fekpal.web.controller"/>
    <mvc:annotation-driven/>

    <!--文件上传，下载-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="1048576000"/>
        <property name="maxInMemorySize" value="4096"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <!---  json数据返回的配置-->
    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"/>
    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerAdapter">
        <property name="messageConverters">
            <list>
                <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>
            </list>
        </property>
    </bean>

    <!--响应数据对象-->
    <bean id="returnData" class="com.fekpal.common.json.JsonResult" scope="request">
        <aop:scoped-proxy/>
    </bean>

    <!--邮箱发送器-->
    <bean id="authenticator" class="org.apache.commons.mail.DefaultAuthenticator"
          c:userName="${mail.username}"
          c:password="${mail.password}"/>

    <bean id="simpleEmail" class="org.apache.commons.mail.SimpleEmail" scope="request"
          p:hostName="${mail.hostname}"
          p:from="${mail.username}"
          p:authenticator-ref="authenticator"
          p:smtpPort="${mail.smtp.port}"
          p:socketConnectionTimeout="${mail.smtp.connectiontimeout}"
          p:socketTimeout="${mail.smtp.timeout}"
          p:SSLOnConnect="${mail.smtp.ssl}">
        <aop:scoped-proxy/>
    </bean>

    <bean id="emailSender" class="com.fekpal.common.utils.msg.email.EmailSender" scope="request"
          p:simpleEmail-ref="simpleEmail">
        <aop:scoped-proxy/>
    </bean>


    <!-- 拦截器 -->
    <mvc:interceptors>
        <!-- 多个拦截器，顺序执行 -->
        <!--登录拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/sau/**"/>
            <mvc:mapping path="/club/**"/>
            <mvc:mapping path="/member/**"/>
            <mvc:mapping path="/msg/**"/>
            <bean class="com.fekpal.web.interceptor.LoginInterceptor"/>
        </mvc:interceptor>

        <!--资源路径访问拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/sau/**"/>
            <mvc:mapping path="/club/**"/>
            <mvc:mapping path="/member/**"/>
            <mvc:mapping path="/msg/**"/>
            <bean class="com.fekpal.web.interceptor.URIInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>


    <!--为避免静态资源路径要经过拦截器等，直接访问文件夹-->
    <!--
    <mvc:resources mapping="/js/**" location="/js/"/>
    <mvc:resources mapping="/css/**" location="/css/"/>
    <mvc:resources mapping="/images/**" location="/images/"/>
    -->
</beans>